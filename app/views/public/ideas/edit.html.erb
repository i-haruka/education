<h1 class="d-flex justify-content-center">編集画面</h1>

<div class="d-flex justify-content-center">
<%= form_with model: @idea, url: update_idea_path(@idea.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>

<% end %>
</div>