<h1>投稿フォーム</h1>

<% if @idea.errors.any? %>
  <%= @idea.errors.count %>件のエラーが発生しました
  <ul>
    <% @idea.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @idea do |f| %>
  <h4>テーマ</h4>
  <%= f.text_field :title %>
  <h4>説明</h4>
  <%= f.text_area :body %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <%= f.submit '投稿' %>
<% end %>