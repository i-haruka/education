<h1 class="d-flex justify-content-center">投稿一覧</h1>


<table class="table d-flex justify-content-center">
  <thead>
    <tr>
      <th>投稿者</th>
      <th>テーマ</th>
      <th>説明</th>
      <th>　　</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% @ideas.each do |idea| %>
    <tr>
     <td>
     <%= image_tag idea.user.get_profile_image(100,100) %>
     </td>
     <td>
      <%=link_to idea.title, idea_path(idea.id) %>
     </td>
  　 <td>
      <%=link_to idea.body, idea_path(idea.id) %>
     </td>
     <td>
       <%= link_to idea_path(idea.id) do %>
        <%= image_tag idea.get_image %>
       <% end %>
     </td>
     <td>
       <%= link_to "#{idea.idea_comments.count} コメント", idea_path(idea.id) %>
     </td>
    </tr>
   <% end %>
  </tbody>
</table>
